<%- include("partials/head") %>
<body>
    <div class="flex justify-center items-center container mx-auto">

        <div class="login-container " id="container">
            <div class="form-container sign-in">
                <form action="/login" method="POST" class="space-y-4">
                    <h1 class="text-2xl font-bold">
                        <%= title %>
                    </h1>
                    <div class="form-control w-full">
                        <input type="email" placeholder="<%= email %>" name="email" id="email" class="input border rounded p-2 w-full">
                        <!-- Error message will be shown here -->
                    </div>
                    <div class="form-control w-full">
                        <input type="password" placeholder="<%= password %>" name="password" id="password" class="input border rounded p-2 w-full">
                        <!-- Error message will be shown here -->
                    </div>

                    <a href="#" class="text-blue-500 hover:underline">
                        <%= forgot %>
                    </a>
                    <button type="submit" class="bg-blue-500 text-white rounded p-2 w-full">
                        <%= title %>
                    </button>
                    <p class="text-sm">
                        <%= newUser %>
                        <a href="/register" class="text-blue-500 hover:underline">
                            Register
                        </a>
                    </p>
                </form>
            </div>
            <div class="toggle-container">
                <div class="toggle text-center">
                    <h1 class="text-4xl font-bold">ATOM</h1>
                    <p class="text-sm">
                        <%= loginMsg %>
                    </p>
                    <div class="dropdown relative inline-block text-left">
                        <button class="dropbtn w-full rounded-md shadow-sm px-4 py-2 text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2">
                            <i class="bi bi-globe-europe-africa"></i>
                            <%= lang %>
                        </button>
                        <div class="dropdown-content origin-top-right absolute right-0 w-full rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5">
                            <div class="py-1 text-center">
                                <a href="./setLanguage/en" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"><i class="fi fi-gb"></i>English</a>
                                <a href="./setLanguage/fa" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"><i class="fi fi-af"></i>فارسی</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="js/validateLogin.js"></script>
</body>